<?xml version="1.0"?>
<launch>

  <arg name="wrist_cam" default="" />
  <arg name="max_dist" default="0.5" />

  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <node pkg="nodelet" type="nodelet" name="passthrough" args="load pcl/PassThrough pcl_manager" output="screen">
    <remap from="~input" to="/camera_wrist/depth_registered/points" />
    <remap from="~output" to="/camera_wrist/depth_registered/z_filtered/points/" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: 0.215
      filter_limit_max: $(arg max_dist)
      filter_limit_negative: False
    </rosparam>
  </node>

</launch>
